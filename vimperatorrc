" vim: set ft=vimperator:

let mapleader = ","

" Title
set titlestring=Firefox

" Fast jump
noremap j 5j
noremap k 5k
noremap l <c-n>
noremap h <c-p>
noremap J <C-f>
noremap K <C-b>
noremap f F

" Move the current tab
noremap <leader>h <Esc>:tabmove! -1<CR>
noremap <leader>l <Esc>:tabmove! +1<CR>"

" Fullsreen
noremap <leader>f <F11>

" Fast open search engine
noremap <leader>t :tabopen<CR>
noremap <leader>g :tabopen https://www.google.com.tw<CR>
noremap <leader>b :tabopen www.baidu.com<CR>

" Show HTTP Headers
noremap ,p <Esc>:pageinfo gfmhH<CR>"

" Useful
nmap ; :

" ;c (right mouse)
nnoremap <leader>; ;

" Colorscheme
colorscheme molokai

" Select copy cut paste .. map
noremap <C-a> i<C-a>
imap <C-a> <Esc>i

" External editor
set editor='bash -lc "mvim -g -f \$*" mvim'

source! /home/zjz311/.vimperatorrc.local
